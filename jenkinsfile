pipeline {
    agent any
    environment {
        DOCKER_CREDENTIALS_ID = 'docker-node'
        IMAGE_REPO = 'mbarrionuevo800/app-server-node'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Extract Version') {
            steps {
                script {
                    // Cambia el directorio a 'app' antes de extraer la versión
                    dir('app') {
                        def version = sh(script: "jq -r '.version' package.json", returnStdout: true).trim()
                        env.APP_VERSION = version
                    }
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Cambia el directorio a 'app' antes de construir la imagen Docker
                    dir('app') {
                        docker.build("${IMAGE_REPO}:${env.APP_VERSION}")
                    }
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    // Iniciar el contenedor Docker y obtener su ID
                    def testContainer = docker.run(
                        image: 'node:14',
                        workingDir: '/usr/src/app',
                        command: 'cat' // Ejecuta un comando que mantiene el contenedor vivo
                    )
                    // Copiar el directorio 'app' al contenedor
                    sh "docker cp ${WORKSPACE}/app ${testContainer.id}:/usr/src/app"
                    // Ejecutar los comandos de prueba dentro del contenedor
                    sh "docker exec ${testContainer.id} sh -c 'npm install'"
                    sh "docker exec ${testContainer.id} sh -c 'npm test'"
                    // Detener y eliminar el contenedor después de la ejecución de la prueba
                    testContainer.stop()
                }
            }
        }



        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS_ID) {
                        // Sube la imagen con la versión específica y latest
                        docker.image("${IMAGE_REPO}:${env.APP_VERSION}").push()
                        docker.image("${IMAGE_REPO}:${env.APP_VERSION}").push('latest')
                    }
                }
            }
        }
    }
}
